<Window x:Class="DepartureBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepartureBoard"
        mc:Ignorable="d"
        Title="PID Departure Board" Height="650" Width="1050"
        Icon="icon.ico"
        Background="#0B1B2B"
        Loaded="OnLoaded">
    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#55D6BE" />
        <SolidColorBrush x:Key="MutedBrush" Color="#9BB1C8" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <LinearGradientBrush x:Key="HeaderBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#12324F" Offset="0"/>
            <GradientStop Color="#0E2238" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" Padding="12" CornerRadius="10" Margin="0 0 0 6">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="PID Departure Board" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="PracovnÃ­ verze 0.0.1.6" FontSize="14" Foreground="{StaticResource MutedBrush}" Margin="12 8 0 0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#112233" Padding="12" CornerRadius="8">
            <WrapPanel ItemWidth="260" MinWidth="220" VerticalAlignment="Center" Margin="0" >
                <StackPanel Margin="0 0 16 8" Width="250">
                    <TextBlock Text="Vyhledat zastÃ¡vku" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <TextBox x:Name="StopSearchBox"
                             Text="{Binding StopSearchText, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="StopSearchBox_OnTextChanged"
                             Width="240" />
                    <Border Background="#0F1E30" BorderBrush="#1F2F44" BorderThickness="1" CornerRadius="6" Margin="0 6 0 0">
                        <ListBox ItemsSource="{Binding StopResults}" SelectionChanged="StopResults_OnSelectionChanged"
                                 Background="Transparent" BorderThickness="0" Foreground="White"
                                 MaxHeight="220"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DisplayIds}" Foreground="{StaticResource MutedBrush}" FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                    <StackPanel Margin="0 6 0 0">
                        <TextBlock Text="Vybrane zastavky" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                        <Border Background="#0F1E30" BorderBrush="#1F2F44" BorderThickness="1" CornerRadius="6">
                            <ScrollViewer MaxHeight="180">
                                <ItemsControl ItemsSource="{Binding SelectedStops}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#1A2C44" CornerRadius="6" Padding="6" Margin="4" BorderBrush="#233A4F" BorderThickness="1">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Margin="0 0 6 0"/>
                                                        <Button Content="x" Width="22" Height="22" Padding="0" Click="RemoveSelectedStop_OnClick"
                                                                Tag="{Binding}" ToolTip="Odebrat zastavku"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding DisplayIds}" FontSize="11" Foreground="{StaticResource MutedBrush}"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="Minut dopÅ™edu" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <TextBox Text="{Binding MinutesAfter, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="Obnovit kaÅ¾dÃ½ch (s)" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <TextBox Text="{Binding RefreshSeconds, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="Filtr dopravy" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <WrapPanel>
                        <CheckBox Content="ðŸš Bus" IsChecked="{Binding ShowBus, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Margin="0 0 8 0"/>
                        <CheckBox Content="ðŸšŠ Tram" IsChecked="{Binding ShowTram, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Margin="0 0 8 0"/>
                        <CheckBox Content="ðŸš‡ Metro" IsChecked="{Binding ShowMetro, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Margin="0 0 8 0"/>
                        <CheckBox Content="ðŸš† Vlak" IsChecked="{Binding ShowTrain, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Margin="0 0 8 0"/>
                        <CheckBox Content="ðŸšŽ Trol." IsChecked="{Binding ShowTrolley, UpdateSourceTrigger=PropertyChanged}" Foreground="White"/>
                    </WrapPanel>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="PÅ™Ã­stupnost" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <ComboBox SelectedValuePath="Tag"
                              SelectedValue="{Binding AccessibilityFilter, UpdateSourceTrigger=PropertyChanged}"
                              Width="180">
                        <ComboBoxItem Content="ðŸŒ VÅ¡e" Tag="{x:Static local:AccessibilityFilter.All}"/>
                        <ComboBoxItem Content="â™¿ Jen bezbariÃ©rovÃ©" Tag="{x:Static local:AccessibilityFilter.AccessibleOnly}"/>
                        <ComboBoxItem Content="â›” Jen vysokopodlaÅ¾nÃ­" Tag="{x:Static local:AccessibilityFilter.HighFloorOnly}"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0 0 16 8" Visibility="{Binding HasPlatformFilters, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="StanoviÅ¡tÄ› (MHD)" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <ItemsControl ItemsSource="{Binding Platforms}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Foreground="White"
                                          Margin="0 0 8 8"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Margin="0 0 16 8" VerticalAlignment="Bottom">
                    <Button Content="NaÄÃ­st odjezdy" Padding="12 6" Width="140" Click="RefreshButton_OnClick" />
                </StackPanel>
            </WrapPanel>
        </Border>

        <Border Grid.Row="2" Background="#0E1928" CornerRadius="10" Padding="6">
            <ListView ItemsSource="{Binding Departures}" BorderThickness="0" Background="Transparent" Foreground="White"
                      x:Name="DeparturesList" AlternationCount="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="8 6"/>
                        <Setter Property="Margin" Value="0 2"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2C44"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#16314D"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#0F1E30"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="90" Header="Linka">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#233A4F" CornerRadius="4" Padding="6" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Line}" FontWeight="Bold" />
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="340" Header="SmÄ›r">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Destination}" FontSize="14" FontWeight="SemiBold" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="200" Header="Zastavka">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StopName}" FontSize="12" Foreground="{StaticResource MutedBrush}"
                                               Visibility="{Binding DataContext.ShowStopName, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource BoolToVisibility}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="110" Header="StanoviÅ¡tÄ›">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Platform}" HorizontalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="110" Header="Odjezd">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DepartureTime}" FontWeight="SemiBold" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="120" Header="Za">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Countdown}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="120" Header="ZpoÅ¾dÄ›nÃ­">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Delay}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="60" Header="Acc">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Accessibility}" HorizontalAlignment="Center" FontSize="16" Foreground="{StaticResource AccentBrush}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="140" Header="Typ vozidla">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding VehicleType}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource MutedBrush}" Margin="4 0 0 0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="Created by Oliver Bocko" Foreground="{StaticResource MutedBrush}" Margin="0 0 4 0" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
