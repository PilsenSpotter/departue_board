<Window x:Class="DepartureBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PID Departure Board" Height="650" Width="1050"
        Icon="icon.ico"
        Background="#0B1B2B"
        Loaded="OnLoaded">
    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#55D6BE" />
        <SolidColorBrush x:Key="MutedBrush" Color="#9BB1C8" />
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 6">
            <TextBlock Text="PID Departure Board" FontSize="28" FontWeight="Bold" Foreground="White"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#112233" Padding="12" CornerRadius="8">
            <WrapPanel ItemWidth="260" MinWidth="220" VerticalAlignment="Center" Margin="0" >
                <StackPanel Margin="0 0 16 8" Width="250">
                    <TextBlock Text="Vyhledat zastávku" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <TextBox x:Name="StopSearchBox"
                             Text="{Binding StopSearchText, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="StopSearchBox_OnTextChanged"
                             Width="240" />
                    <Border Background="#0F1E30" BorderBrush="#1F2F44" BorderThickness="1" CornerRadius="6" Margin="0 6 0 0">
                        <ScrollViewer MaxHeight="220">
                            <ListBox ItemsSource="{Binding StopResults}" SelectionChanged="StopResults_OnSelectionChanged"
                                     Background="Transparent" BorderThickness="0" Foreground="White">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding DisplayIds}" Foreground="{StaticResource MutedBrush}" FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="Minut dopředu" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <TextBox Text="{Binding MinutesAfter, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="Obnovit každých (s)" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <TextBox Text="{Binding RefreshSeconds, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="Filtr dopravy" Foreground="{StaticResource MutedBrush}" Margin="0 0 0 4"/>
                    <WrapPanel>
                        <CheckBox Content="Bus" IsChecked="{Binding ShowBus}" Foreground="White" Margin="0 0 8 0"/>
                        <CheckBox Content="Tram" IsChecked="{Binding ShowTram}" Foreground="White" Margin="0 0 8 0"/>
                        <CheckBox Content="Metro" IsChecked="{Binding ShowMetro}" Foreground="White" Margin="0 0 8 0"/>
                        <CheckBox Content="Trol." IsChecked="{Binding ShowTrolley}" Foreground="White"/>
                    </WrapPanel>
                </StackPanel>

                <StackPanel Margin="0 0 16 8" VerticalAlignment="Bottom">
                    <Button Content="Načíst odjezdy" Padding="12 6" Width="140" Click="RefreshButton_OnClick" />
                </StackPanel>
            </WrapPanel>
        </Border>

        <Border Grid.Row="2" Background="#0E1928" CornerRadius="10" Padding="6">
            <ListView ItemsSource="{Binding Departures}" BorderThickness="0" Background="Transparent" Foreground="White"
                      x:Name="DeparturesList" AlternationCount="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="8 6"/>
                        <Setter Property="Margin" Value="0 2"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2C44"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#16314D"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#0F1E30"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="90" Header="Linka">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#233A4F" CornerRadius="4" Padding="6" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Line}" FontWeight="Bold" />
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="340" Header="Směr">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Destination}" FontSize="14" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding StopName}" FontSize="11" Foreground="{StaticResource MutedBrush}" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="110" Header="Stanoviště">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Platform}" HorizontalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="110" Header="Odjezd">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DepartureTime}" FontWeight="SemiBold" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="120" Header="Za">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Countdown}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="120" Header="Zpoždění">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Delay}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="60" Header="Acc">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Accessibility}" HorizontalAlignment="Center" FontSize="14"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <TextBlock Grid.Row="3" Text="{Binding StatusMessage}" Foreground="{StaticResource MutedBrush}" Margin="4 0 0 0"/>
    </Grid>
</Window>
