<Window x:Class="DepartureBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepartureBoard"
        xmlns:models="clr-namespace:DepartureBoard.Models"
        mc:Ignorable="d"
        Title="PID Departure Board" Height="650" Width="1050"
        Icon="icon.ico"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource PrimaryForegroundBrush}"
        Loaded="OnLoaded"
        KeyDown="OnKeyDown">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
            <Style TargetType="TextBox">
                <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}" />
                <Setter Property="CaretBrush" Value="{DynamicResource PrimaryForegroundBrush}" />
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}" />
                <Setter Property="Padding" Value="6 4" />
                <Setter Property="ItemContainerStyle">
                    <Setter.Value>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
                            <Setter Property="Padding" Value="6 4" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Style.Triggers>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ListHoverBrush}" />
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ListSelectedBrush}" />
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
                                    <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="{TemplateBinding Background}"
                                              BorderBrush="{TemplateBinding BorderBrush}"
                                              BorderThickness="1"
                                              Foreground="{TemplateBinding Foreground}"
                                              Focusable="False"
                                              ClickMode="Press"
                                              Padding="0">
                                    <Grid>
                                        <ContentPresenter x:Name="ContentSite"
                                                          Margin="{TemplateBinding Padding}"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left"
                                                          RecognizesAccessKey="True" />
                                        <Path x:Name="Arrow"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0"
                                              Fill="{TemplateBinding Foreground}"
                                              Data="M 0 0 L 4 4 L 8 0 Z" />
                                    </Grid>
                                </ToggleButton>
                                <Popup x:Name="PART_Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Border Background="{DynamicResource CardBackgroundBrush}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <ScrollViewer Margin="2"
                                                      SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True"
                                                        KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ToggleButton" Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="ToggleButton" Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                                    <Setter TargetName="ToggleButton" Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
                                    <Setter TargetName="Arrow" Property="Fill" Value="{DynamicResource MutedBrush}" />
                                    <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ComboBoxItem">
                <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
            </Style>
            <Style TargetType="CheckBox">
                <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
                <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
                <Setter Property="Padding" Value="8 4" />
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
                        <Setter Property="Background" Value="{DynamicResource ListAlternateBrush}" />
                        <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
                        <Setter Property="Opacity" Value="0.7" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
                <Setter Property="Width" Value="50" />
                <Setter Property="Height" Value="26" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid>
                                <Border x:Name="SwitchTrack"
                                        Background="#DDDDDD"
                                        BorderBrush="{DynamicResource CardBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="13" />
                                <Ellipse x:Name="SwitchThumb"
                                         Width="22"
                                         Height="22"
                                         Fill="White"
                                         Margin="2"
                                         HorizontalAlignment="Left" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="SwitchTrack" Property="Background" Value="{DynamicResource AccentBrush}" />
                                    <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border x:Name="HeaderPanel" Grid.Row="0" Background="{DynamicResource HeaderBrush}" Padding="12" CornerRadius="10" Margin="0 0 0 6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="PID Departure Board" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                    <TextBlock Text="Aktualni verze 0.0.1.6.5" FontSize="14" Foreground="{DynamicResource MutedBrush}" Margin="12 8 0 0"/>
                </StackPanel>
                <ToggleButton Grid.Column="1"
                              Content="{Binding ThemeToggleLabel}"
                              IsChecked="{Binding IsLightTheme, Mode=TwoWay}"
                              Padding="10 6"
                              MinWidth="120"
                              Margin="8 0 0 0"
                              Background="{DynamicResource CardBackgroundBrush}"
                              BorderBrush="{DynamicResource CardBorderBrush}"
                              Foreground="{DynamicResource PrimaryForegroundBrush}"
                              ToolTip="Prepnout svetly/tmavy motiv" />
            </Grid>
        </Border>

        <Border x:Name="ControlsPanel" Grid.Row="1" Background="{DynamicResource PanelBackgroundBrush}" Padding="12" CornerRadius="8">
            <WrapPanel ItemWidth="260" MinWidth="220" VerticalAlignment="Center" Margin="0" >
                <StackPanel Margin="0 0 16 8" Width="250">
                    <TextBlock Text="Vyhledat zastÃ¡vku" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                    <TextBox x:Name="StopSearchBox"
                             Text="{Binding StopSearchText, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="StopSearchBox_OnTextChanged"
                             Width="240" />
                    <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" CornerRadius="6" Margin="0 6 0 0">
                        <ListBox ItemsSource="{Binding StopResults}" SelectionChanged="StopResults_OnSelectionChanged"
                                 Background="Transparent" BorderThickness="0" Foreground="{DynamicResource PrimaryForegroundBrush}"
                                 MaxHeight="220"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DisplayIds}" Foreground="{DynamicResource MutedBrush}" FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                    <StackPanel Margin="0 6 0 0">
                        <TextBlock Text="Vybrane zastavky" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                        <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" CornerRadius="6">
                            <ScrollViewer MaxHeight="180">
                                <ItemsControl ItemsSource="{Binding SelectedStops}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource ChipBackgroundBrush}" CornerRadius="6" Padding="6" Margin="4" BorderBrush="{DynamicResource ChipBorderBrush}" BorderThickness="1">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Margin="0 0 6 0"/>
                                                        <Button Content="x" Width="22" Height="22" Padding="0" Click="RemoveSelectedStop_OnClick"
                                                                Tag="{Binding}" ToolTip="Odebrat zastavku"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding DisplayIds}" FontSize="11" Foreground="{DynamicResource MutedBrush}"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="Minut dopÅ™edu" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                    <TextBox Text="{Binding MinutesAfter, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="Obnovit kaÅ¾dÃ½ch (s)" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                    <TextBox Text="{Binding RefreshSeconds, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="Filtr dopravy" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                    <WrapPanel>
                        <CheckBox Content="ðŸš Bus" IsChecked="{Binding ShowBus, UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0 0 8 0"/>
                        <CheckBox Content="ðŸšŠ Tram" IsChecked="{Binding ShowTram, UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0 0 8 0"/>
                        <CheckBox Content="ðŸš‡ Metro" IsChecked="{Binding ShowMetro, UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0 0 8 0"/>
                        <CheckBox Content="ðŸš† Vlak" IsChecked="{Binding ShowTrain, UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0 0 8 0"/>
                        <CheckBox Content="ðŸšŽ Trol." IsChecked="{Binding ShowTrolley, UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                    </WrapPanel>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <TextBlock Text="PÅ™Ã­stupnost" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                    <ComboBox SelectedValuePath="Tag"
                              SelectedValue="{Binding AccessibilityFilter, UpdateSourceTrigger=PropertyChanged}"
                              Width="180">
                        <ComboBoxItem Content="ðŸŒ VÅ¡e" Tag="{x:Static models:AccessibilityFilter.All}"/>
                        <ComboBoxItem Content="â™¿ Jen bezbariÃ©rovÃ©" Tag="{x:Static models:AccessibilityFilter.AccessibleOnly}"/>
                        <ComboBoxItem Content="â›” Jen vysokopodlaÅ¾nÃ­" Tag="{x:Static models:AccessibilityFilter.HighFloorOnly}"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0 0 16 8">
                    <CheckBox Content="Jen vcas" IsChecked="{Binding ShowOnTimeOnly, UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                </StackPanel>

                <StackPanel Margin="0 0 16 8" Width="260">
                    <TextBlock Text="Upozorneni" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                    <CheckBox Content="Zapnout" IsChecked="{Binding AlertsEnabled, UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0 0 0 4"/>
                    <StackPanel Orientation="Horizontal" Margin="0 4 0 2">
                        <TextBlock Text="Za â‰¤" Foreground="{DynamicResource MutedBrush}" Margin="0 4 4 0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding AlertMinutesThreshold, UpdateSourceTrigger=PropertyChanged}" Width="40"/>
                        <TextBlock Text="min" Foreground="{DynamicResource MutedBrush}" Margin="4 4 8 0" VerticalAlignment="Center"/>
                        <TextBlock Text="Zpozdeni â‰¥" Foreground="{DynamicResource MutedBrush}" Margin="0 4 4 0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding AlertDelayThreshold, UpdateSourceTrigger=PropertyChanged}" Width="40"/>
                        <TextBlock Text="min" Foreground="{DynamicResource MutedBrush}" Margin="4 4 0 0" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0 0 16 8" Visibility="{Binding HasPlatformFilters, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="StanoviÅ¡tÄ› (MHD)" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                    <ItemsControl ItemsSource="{Binding Platforms}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Foreground="{DynamicResource PrimaryForegroundBrush}"
                                          Margin="0 0 8 8"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Margin="0 0 16 8" Visibility="{Binding HasLineFilters, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="Linky" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                    <ItemsControl ItemsSource="{Binding Lines}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Foreground="{DynamicResource PrimaryForegroundBrush}"
                                          Margin="0 0 8 8"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Margin="0 0 16 8" Width="260">
                    <TextBlock Text="Sety zastavek" Foreground="{DynamicResource MutedBrush}" Margin="0 0 0 4"/>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                        <TextBox Width="140"
                                 Text="{Binding NewPresetName, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding RememberSettings}" />
                        <Button Content="Ulozit" Margin="6 0 0 0" Padding="10 4"
                                Click="SavePresetButton_OnClick"
                                IsEnabled="{Binding RememberSettings}"/>
                    </StackPanel>
                    <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" CornerRadius="6">
                        <ScrollViewer MaxHeight="140">
                            <ItemsControl ItemsSource="{Binding Presets}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="6 4">
                                            <TextBlock Text="{Binding Name}" Width="120" Foreground="{DynamicResource PrimaryForegroundBrush}" />
                                            <Button Content="Pouzit" Padding="8 4" Margin="4 0 0 0" Click="ApplyPresetButton_OnClick"/>
                                            <Button Content="Smazat" Padding="8 4" Margin="4 0 0 0" Click="DeletePresetButton_OnClick"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0 0 16 8" VerticalAlignment="Bottom">
                    <Button Content="NaÄÃ­st odjezdy" Padding="12 6" Width="140" Click="RefreshButton_OnClick" />
                </StackPanel>
            </WrapPanel>
        </Border>
        <Grid Grid.Row="2">
        <Border Background="{DynamicResource ListBackgroundBrush}" CornerRadius="10" Padding="6" x:Name="ListPanel">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBoardMode}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <ListView ItemsSource="{Binding Departures}" BorderThickness="0" Background="Transparent" Foreground="{DynamicResource PrimaryForegroundBrush}"
                      x:Name="DeparturesList" AlternationCount="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                        <Setter Property="Padding" Value="8 6"/>
                        <Setter Property="Margin" Value="0 2"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="{DynamicResource ListAlternateBrush}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding DelayCategory}" Value="minor">
                                <Setter Property="Background" Value="{DynamicResource DelayMinorBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding DelayCategory}" Value="major">
                                <Setter Property="Background" Value="{DynamicResource DelayMajorBrush}"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ListHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ListSelectedBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="90" Header="Linka">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource BadgeBackgroundBrush}" CornerRadius="4" Padding="6" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Line}" FontWeight="Bold" />
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="340" Header="SmÄ›r">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Destination}" FontSize="14" FontWeight="SemiBold" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="200" Header="Zastavka">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StopName}" FontSize="12" Foreground="{DynamicResource MutedBrush}"
                                               Visibility="{Binding DataContext.ShowStopName, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource BoolToVisibility}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="110" Header="StanoviÅ¡tÄ›">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Platform}" HorizontalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="110" Header="Odjezd">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DepartureTime}" FontWeight="SemiBold" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="120" Header="Za">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Countdown}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="120" Header="ZpoÅ¾dÄ›nÃ­">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Delay}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="60" Header="Acc">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Accessibility}" HorizontalAlignment="Center" FontSize="16" Foreground="{DynamicResource AccentBrush}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="140" Header="Typ vozidla">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding VehicleType}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Border x:Name="BoardPanel"
                Background="#2F3531"
                CornerRadius="10"
                Padding="12"
                Visibility="{Binding IsBoardMode, Converter={StaticResource BoolToVisibility}}"
                BorderBrush="#4A4F4B"
                BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="#444C48" CornerRadius="6" Padding="10" Margin="0 0 0 12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0 0 12 0">
                            <StackPanel Margin="0 0 12 0">
                                <TextBlock Text="LINKA" Foreground="#C8D2C9" FontSize="12" FontWeight="Bold" />
                                <TextBlock Text="LINE" Foreground="#C8D2C9" FontSize="10" />
                            </StackPanel>
                            <StackPanel Margin="0 0 12 0">
                                <TextBlock Text="CIL" Foreground="#C8D2C9" FontSize="12" FontWeight="Bold" />
                                <TextBlock Text="DESTINATION" Foreground="#C8D2C9" FontSize="10" />
                            </StackPanel>
                            <StackPanel Margin="0 0 12 0">
                                <TextBlock Text="STAN." Foreground="#C8D2C9" FontSize="12" FontWeight="Bold" />
                                <TextBlock Text="PLATFORM" Foreground="#C8D2C9" FontSize="10" />
                            </StackPanel>
                            <StackPanel Margin="0 0 12 0">
                                <TextBlock Text="ACC" Foreground="#C8D2C9" FontSize="12" FontWeight="Bold" />
                                <TextBlock Text="ACCESS" Foreground="#C8D2C9" FontSize="10" />
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="ODJEZD" Foreground="#C8D2C9" FontSize="12" FontWeight="Bold" />
                                <TextBlock Text="DEPARTURE" Foreground="#C8D2C9" FontSize="10" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="CAS / TIME" Foreground="#C8D2C9" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding CurrentTimeDisplay}" Foreground="#FFB200" FontSize="26" FontFamily="Consolas, 'Courier New', monospace" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="#202522" CornerRadius="6" Padding="16" BorderBrush="#4A4F4B" BorderThickness="1">
                    <ItemsControl ItemsSource="{Binding BoardDepartures}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0 2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Line}"
                                               FontFamily="Consolas, 'Courier New', monospace"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               Foreground="#FFB200"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Destination}"
                                               FontFamily="Consolas, 'Courier New', monospace"
                                               FontSize="22"
                                               Foreground="#FFB200"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Platform}"
                                               FontFamily="Consolas, 'Courier New', monospace"
                                               FontSize="20"
                                               Foreground="#FFB200"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="3"
                                               Text="{Binding Accessibility}"
                                               FontFamily="Consolas, 'Courier New', monospace"
                                               FontSize="20"
                                               Foreground="#FFB200"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="4"
                                               Text="{Binding Countdown}"
                                               FontFamily="Consolas, 'Courier New', monospace"
                                               FontSize="22"
                                               Foreground="#FFB200"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Grid>
        </Border>
        </Grid>

        <Grid x:Name="BottomPanel" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource MutedBrush}" Margin="4 0 0 0" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8 0">
                <TextBlock Text="Pamatovat nastaveni" Foreground="{DynamicResource MutedBrush}" Margin="0 0 8 0" VerticalAlignment="Center"/>
                <ToggleButton Style="{StaticResource SwitchToggleStyle}"
                              IsChecked="{Binding RememberSettings, Mode=TwoWay}"
                              ToolTip="Uklada vybrane zastavky, filtry a motiv; vypnuti smaze ulozene nastaveni." />
            </StackPanel>
            <ToggleButton Grid.Column="2"
                          Content="Rezim zobrazovac"
                          IsChecked="{Binding IsDisplayMode, Mode=TwoWay}"
                          Padding="12 6"
                          Margin="8 0"
                          MinWidth="150"
                          Background="{DynamicResource CardBackgroundBrush}"
                          BorderBrush="{DynamicResource CardBorderBrush}"
                          Foreground="{DynamicResource PrimaryForegroundBrush}"
                          ToolTip="Fullscreen + always on top; ESC ukonci rezim." />
            <ToggleButton Grid.Column="3"
                          Content="Rezim tabule"
                          IsChecked="{Binding IsBoardMode, Mode=TwoWay}"
                          Padding="12 6"
                          Margin="8 0"
                          MinWidth="150"
                          Background="{DynamicResource CardBackgroundBrush}"
                          BorderBrush="{DynamicResource CardBorderBrush}"
                          Foreground="{DynamicResource PrimaryForegroundBrush}"
                          ToolTip="PID-like panel: fullscreen, schova UI, ESC ukonci." />
            <TextBlock Grid.Column="4" Text="Created by Oliver Bocko" Foreground="{DynamicResource MutedBrush}" Margin="8 0 4 0" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
