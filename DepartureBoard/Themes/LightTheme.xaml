<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="AccentBrush" Color="#0F8C6E" />
    <SolidColorBrush x:Key="MutedBrush" Color="#556070" />
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#1B2430" />

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F5F7FB" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#F2F5FA" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="#D8E1ED" />

    <SolidColorBrush x:Key="ChipBackgroundBrush" Color="#E3EBF7" />
    <SolidColorBrush x:Key="ChipBorderBrush" Color="#C6D5EA" />
    <SolidColorBrush x:Key="BadgeBackgroundBrush" Color="#D2E3F7" />

    <SolidColorBrush x:Key="ListBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ListHoverBrush" Color="#E6EEF8" />
    <SolidColorBrush x:Key="ListSelectedBrush" Color="#D6E4F6" />
    <SolidColorBrush x:Key="ListAlternateBrush" Color="#F4F7FB" />

    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="#D8E1ED" />

    <LinearGradientBrush x:Key="HeaderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#E3ECFA" Offset="0" />
        <GradientStop Color="#D3DFF1" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>
